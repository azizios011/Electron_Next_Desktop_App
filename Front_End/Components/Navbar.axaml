<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1400" d:DesignHeight="70"
             x:Class="Front_End.Components.Navbar">

    <Border Background="White" 
            BorderBrush="#F3F4F6" 
            BorderThickness="0,0,0,1"
            Padding="48,16">
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Logo and Brand -->
            <StackPanel Grid.Column="0" 
                        Orientation="Horizontal" 
                        Spacing="8"
                        VerticalAlignment="Center">
                
                <!-- Logo Icon -->
                <Border Width="32" 
                        Height="32" 
                        Background="Black" 
                        CornerRadius="8">
                    <Border.RenderTransform>
                        <RotateTransform Angle="12"/>
                    </Border.RenderTransform>
                    <Border Width="16" 
                            Height="4" 
                            Background="White" 
                            CornerRadius="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                </Border>
                
                <!-- Brand Name -->
                <TextBlock Text="Invooce" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center"
                           Foreground="#111827"/>
            </StackPanel>

            <!-- Center: Navigation Links -->
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        Spacing="32"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                
                <!-- Home Link (Active) -->
                <Border Background="#F3F4F6" 
                        CornerRadius="16" 
                        Padding="16,6">
                    <TextBlock Text="Home" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               Foreground="#111827"/>
                </Border>
                
                <!-- Invoices Link -->
                <Button Background="Transparent" 
                        BorderThickness="0"
                        Padding="0"
                        Cursor="Hand">
                    <TextBlock Text="Invoices" 
                               FontSize="14" 
                               FontWeight="Medium" 
                               Foreground="#6B7280"/>
                </Button>
                
                <!-- Projects Link -->
                <Button Background="Transparent" 
                        BorderThickness="0"
                        Padding="0"
                        Cursor="Hand">
                    <TextBlock Text="Projects" 
                               FontSize="14" 
                               FontWeight="Medium" 
                               Foreground="#6B7280"/>
                </Button>
                
                <!-- Clients Link -->
                <Button Background="Transparent" 
                        BorderThickness="0"
                        Padding="0"
                        Cursor="Hand">
                    <TextBlock Text="Clients" 
                               FontSize="14" 
                               FontWeight="Medium" 
                               Foreground="#6B7280"/>
                </Button>
            </StackPanel>

            <!-- Right: Search, Notifications, Avatar -->
            <StackPanel Grid.Column="2" 
                        Orientation="Horizontal" 
                        Spacing="16"
                        VerticalAlignment="Center">
                
                <!-- Search Button -->
                <Button Width="40" 
                        Height="40" 
                        Background="Transparent"
                        CornerRadius="20"
                        Padding="0"
                        Cursor="Hand">
                    <Button.Styles>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="#F3F4F6"/>
                        </Style>
                    </Button.Styles>
                    <!-- Search Icon -->
                    <Path Data="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" 
                          Stroke="#6B7280" 
                          StrokeThickness="2"
                          StrokeLineCap="Round"
                          Width="20" 
                          Height="20"
                          Stretch="Uniform"/>
                </Button>
                
                <!-- Notification Button with Badge -->
                <Button Width="40" 
                        Height="40" 
                        Background="Transparent"
                        CornerRadius="20"
                        Padding="0"
                        Cursor="Hand">
                    <Button.Styles>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="#F3F4F6"/>
                        </Style>
                    </Button.Styles>
                    <Grid>
                        <!-- Bell Icon -->
                        <Path Data="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" 
                              Stroke="#6B7280" 
                              StrokeThickness="2"
                              StrokeLineCap="Round"
                              Width="20" 
                              Height="20"
                              Stretch="Uniform"/>
                        
                        <!-- Notification Badge -->
                        <Ellipse Width="8" 
                                 Height="8" 
                                 Fill="#3B82F6"
                                 Stroke="White"
                                 StrokeThickness="2"
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Top"
                                 Margin="0,0,2,0"/>
                    </Grid>
                </Button>
                
                <!-- User Avatar with Verified Badge -->
                <Grid Width="32" 
                      Height="32"
                      Margin="8,0,0,0">
                    
                    <!-- Avatar Circle -->
                    <Border Width="32" 
                            Height="32" 
                            Background="#E5E7EB" 
                            CornerRadius="16">
                        <TextBlock Text="RD" 
                                   FontSize="12" 
                                   FontWeight="Bold" 
                                   Foreground="#4B5563"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    
                    <!-- Verified Badge -->
                    <Border Width="12" 
                            Height="12" 
                            Background="#3B82F6"
                            CornerRadius="6"
                            BorderBrush="White"
                            BorderThickness="2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Margin="0,0,-2,-2">
                        <!-- Checkmark Icon -->
                        <Path Data="M5 13l4 4L19 7" 
                              Stroke="White" 
                              StrokeThickness="4"
                              StrokeLineCap="Round"
                              Width="6" 
                              Height="6"
                              Stretch="Uniform"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
